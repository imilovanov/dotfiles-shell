### fzf
function fzfw { (cat $1 | fzf -m) > $2; }
function fbrw { (cat $1 | fbr -m) > $2; }


# `o` with no arguments opens the current directory, otherwise opens the given
function o() {					     
	if [ $# -eq 0 ]; then
		open .;
  	else                                                                                		open "$@";
	fi;
}
